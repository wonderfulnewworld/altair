<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <div>
        <table>
            <tr>
                <th>{{localize "altair.weapon.type"}}</th>
                <th>{{localize "altair.weapon.damage"}}</th>
                <th>{{localize "altair.weapon.range"}}</th>
                <th>{{localize "altair.weapon.speed"}}</th>
                <th>{{localize "altair.weapon.pierce"}}</th>
                <th>{{localize "altair.weapon.splash"}}</th>
                <th>{{localize "altair.weapon.knockback"}}</th>
                <th>{{localize "altair.weapon.element"}}</th>
                <th>{{localize "altair.weapon.antielement"}}</th>
                <th>{{localize "altair.weapon.flying"}}</th>
                <th>{{localize "altair.weapon.movement"}}</th>
            </tr>
            <tr>
                <td>
                    <select name = "system.type">
                        {{#select system.type}}
                        {{#each config.attackTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="system.damage" type="text" value="{{system.damage}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.range" type="text" value="{{system.range}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.speed" type="text" value="{{system.speed}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.pierce" type="text" value="{{system.pierce}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.splash" type="text" value="{{system.splash}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.knockback" type="text" value="{{system.knockback}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.element" type="text" value="{{system.element}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.antielement" type="text" value="{{system.antielement}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.flying" type="text" value="{{system.flying}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="system.movement" type="text" value="{{system.movement}}" data-dtype="Number"/>
                </td>
            </tr>
        </table>
        <textarea name="system.description">{{system.description}}</textarea>
    </div>
</form>