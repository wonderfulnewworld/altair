<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <div>
        <table>
            <tr>
                <th>{{localize "altair.weapon.type"}}</th>
                <th>{{localize "altair.weapon.damage"}}</th>
                <th>{{localize "altair.weapon.range"}}</th>
                <th>{{localize "altair.weapon.speed"}}</th>
                <th>{{localize "altair.weapon.pierce"}}</th>
                <th>{{localize "altair.weapon.splash"}}</th>
                <th>{{localize "altair.weapon.knockback"}}</th>
                <th>{{localize "altair.weapon.element"}}</th>
                <th>{{localize "altair.weapon.antielement"}}</th>
                <th>{{localize "altair.weapon.flying"}}</th>
                <th>{{localize "altair.weapon.movement"}}</th>
            </tr>
            <tr>
                <td>
                    <select name = "data.type">
                        {{#select data.type}}
                        {{#each config.attackTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="data.damage" type="text" value="{{data.damage}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.range" type="text" value="{{data.range}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.speed" type="text" value="{{data.speed}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.pierce" type="text" value="{{data.pierce}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.splash" type="text" value="{{data.splash}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.knockback" type="text" value="{{data.knockback}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.element" type="text" value="{{data.element}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.antielement" type="text" value="{{data.antielement}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.flying" type="text" value="{{data.flying}}" data-dtype="Number"/>
                </td>
                <td>
                    <input name="data.movement" type="text" value="{{data.movement}}" data-dtype="Number"/>
                </td>
            </tr>
        </table>
        <textarea name="data.description">{{data.description}}</textarea>
    </div>
</form>